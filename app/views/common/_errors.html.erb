<% if resource.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h2>
        <%= pluralize(resource.errors.count, "error") %> не позволяют сохранить
        данный объект:
      </h2>
      <ul>
        <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>
