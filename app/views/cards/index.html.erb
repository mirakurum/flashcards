<h1>Все карточки</h1>

<table class="table table-striped table-bordered">
  <tr class="thead-inverse">
    <th>#</th>
    <th>Название</th>
    <th>Перевод</th>
    <th>Время просмотра</th>
    <th>Изменить</th>
    <th>Удалить</th>
  </tr>

  <% @cards.each do |card| %>
    <tr>
      <td><%= card.id %></td>
      <td><%= card.original_text %></td>
      <td><%= card.translated_text %></td>
      <td><%= card.review_date ? card.review_date.strftime("%d %B %Y %R")
      : 'Not review'  %></td>
      <td><%= link_to 'Изменить', edit_card_path(card) %></td>
      <td><%= link_to 'Удалить', card_path(card),
              method: :delete, data: { confirm: 'Вы уверены?' } %></td>
    </tr>
  <% end %>
</table>
